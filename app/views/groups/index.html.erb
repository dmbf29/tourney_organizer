              <h4>Group <%= group.name %></h4>
            </div>
            <div class="player-team-selection">
              <div class="player-group">
                <%= select_tag "players[]", options_from_collection_for_select(@players, "id", "name") %>
                <%= select_tag "players[]", options_from_collection_for_select(@players, "id", "name") %>
                <%= select_tag "players[]", options_from_collection_for_select(@players, "id", "name") %>
                <%= select_tag "players[]", options_from_collection_for_select(@players, "id", "name") %>
              </div>
              <div class="team-group">
                <%= select_tag "teams[]", options_from_collection_for_select(@teams, "id", "name") %>
                <%= select_tag "teams[]", options_from_collection_for_select(@teams, "id", "name") %>
                <%= select_tag "teams[]", options_from_collection_for_select(@teams, "id", "name") %>
                <%= select_tag "teams[]", options_from_collection_for_select(@teams, "id", "name") %>
              </div>
            </div>
        <% end %>
        <%= submit_tag "Submit", class: "btn btn-primary full-width" %>
    </div>
  </div>
</div>
